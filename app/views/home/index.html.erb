<ul id="works">
  <% @works.each do |work| %>
  <li><%= image_tag work.image.url(:large), "data-thumb"        => work.image.url(:thumb),
                                            "data-work-id"      => work.id,
                                            "data-work-caption" => work.caption.html_safe,
                                            :id => "work_#{work.id}" %></li>
  <% end %>
</ul>

<div id="navigator">
  <div class="prev-work">
    <%= image_tag '', :class => "hidden", "data-work-id" => '' %>
  </div>
  <div class="current-work">
    <%= image_tag @works.first.image.url(:thumb), "data-work-id" => @works.first.id %>
  </div>
  <div class="next-work">
    <%= image_tag @works.second.image.url(:thumb), "data-work-id" => @works.second.id %>
  </div>
</div>

<div id="work_caption"><%= @works.first.caption.html_safe %></div>

<div class="pagination_container hidden">
  <%= will_paginate(@works)%>
</div>