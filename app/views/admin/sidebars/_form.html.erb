<%= form_for([:admin, @sidebar]) do |f| %>
  <% if @sidebar.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@sidebar.errors.count, "error") %> prohibited this page from being saved:</h2>

      <ul>
      <% @sidebar.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <div class="label"><%= f.label :title %></div>
    <div class="input"><%= @sidebar.link_to %></div>
  </div>
  <div class="field">
    <div class="label"><%= f.label :description %></div>
    <div class="input left"><%= f.text_area :description, :class => 'rich_editor' %></div>
  </div>
  <div class="field clear_fix">
    <div class="label left">
      <label for="image">Image</label>
      <div class="warning">306px wide</div>
    </div>
  <% if @sidebar.image.exists? -%>
    <div class="left">
      <div><%= image_tag @sidebar.image.url(:large) %></div>
      <div>replace with <%= f.file_field :image %></div>
    </div>
  <% else -%>
    <%= f.file_field :image %>
  <% end -%>
  </div>
  <div class="actions">
    <div class="submit"><%= f.submit %></div>
  </div>
<% end %>

<%= render 'admin/shared/set_rich_editor' %>