<div id="show_wrapper">
  <div class="nav_links clear_fix">
    <div class="left"><%= link_to 'Back to List', admin_works_path %></div>
    <div class="right">
      <%= link_to 'Edit', edit_admin_work_path(@work) %>
    </div>
  </div>

  <div class="show_container">
    <div class="row">
      <div class="label">Title</div>
      <div class="data"><%= @work.title %></div>
    </div>
    <div class="row">
      <div class="label">Description</div>
      <div class="data"><%= @work.description.html_safe %></div>
    </div>
    <div class="row">
      <div class="label">Image</div>
      <div class="data">
        <% if @work.image.exists? -%>
          <div><%= image_tag @work.image.url(:thumb) %></div>
        <% else -%>
          No file exists.
        <% end -%>
      </div>
    </div>
  </div>

</div>