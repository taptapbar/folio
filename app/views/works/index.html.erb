<ul id="works">
  <% @works.each do |work| %>
  <li><%= image_tag work.image.url(:large), "data-thumb"        => work.image.url(:thumb),
                                            "data-work-id"      => work.id,
                                            "data-work-caption" => work.caption.html_safe,
                                            :id => "work_#{work.id}" %></li>
  <% end %>
</ul>

<div class="pagination_container hidden">
  <%= will_paginate(@works)%>
</div>
