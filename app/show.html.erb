<div id="show_wrapper">
  <div class="nav_links clear_fix">
    <div class="left"><%= link_to 'Back to List', admin_reviews_path %></div>
    <div class="right">
      <%= link_to 'Edit', edit_admin_review_path(@review) %>
    </div>
  </div>

  <div class="show_container">
    <div class="row">
      <div class="label">Title</div>
      <div class="data"><%= @review.title %></div>
    </div>
    <div class="row">
      <div class="label">Description</div>
      <div class="data"><%= @review.description.html_safe %></div>
    </div>
    <div class="row">
      <div class="label">PDF</div>
      <div class="data">
        <% if @review.pdf.exists? -%>
          <div><%= link_to "Download PDF", @review.pdf.url %></div>
        <% else -%>
          No file exists.
        <% end -%>
      </div>
    </div>
  </div>

</div>